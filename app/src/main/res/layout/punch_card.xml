<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:padding="8dp"
    android:layout_margin="8dp">

            <TextView
                android:id="@+id/punchDurationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 hours, 20 minutes"
                android:layout_toEndOf="@id/editPunchCardImageView"
                android:layout_marginLeft="8dp"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/editPunchCardImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/baseline_edit_24"/>

            <ImageView
                android:id="@+id/deletePunchCardImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/baseline_delete_forever_24"/>

            <TextView
                android:id="@+id/punchInTextView"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/punchDurationTextView"
                android:layout_marginTop="4dp"
                android:text="Punch in: 12:40 pm"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/punchOutTextView"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/punchDurationTextView"
                android:text="Punch out: 6:40 pm"
                android:textColor="@color/black"
                android:textSize="20sp"/>

</RelativeLayout>